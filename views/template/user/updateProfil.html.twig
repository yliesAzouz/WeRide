{% extends "../../main.html.twig" %}
{% block main %}
	<main>
		<div class="container">
			<div class="row ">
				<form class="col-md-6 mx-auto p-3 my-5 bg-light rounded" enctype="multipart/form-data" method="post" action="modifierProfil">
					<h1 class="text-primary">Modifier le Profil</h1>
					<hr class="m-0">
					{% for err in errors %}
						<p class="text-danger my-1">{{err}}</p>
					{% endfor %}
					<div>
						<label class="my-3" for="name">Prénom</label>
						<input type="text" class="form-control" id="name" name="name" placeholder="Entrer votre prénom" value="{{user.name}}">
						<p class="text-danger">{{errors.firstName}}</p>
					</div>
					<div>
						<label class="my-3" for="firstName">Nom</label>
						<input type="text" class="form-control" id="firstName" name="firstName" placeholder="Entrer votre nom" value="{{user.firstName}}">
						<p class="text-danger">{{errors.name}}</p>
					</div>
					<div>
						<label class="my-3" for="firstName">Pseudo</label>
						<input type="text" class="form-control" id="pseudo" name="pseudo" placeholder="Entrer votre pseudo" value="{{user.pseudo}}">
						<p class="text-danger">{{errors.pseudo}}</p>
					</div>
					<div>
					<label class="my-3" for="image">Photo</label>
					<input type="file" class="form-control" id="image" name="image" accept="image/*">
				</div>
					<div>
						<label class="my-3" for="firstName">Ancien mot de passe</label>
						<input type="password" class="form-control" id="oldPassword" name="oldPassword" placeholder="Entrer votre ancien mot de passe" value="">
					</div>
					<div>
						<label class="my-3" for="firstName">Nouveaux mot de passe</label>
						<input type="password" class="form-control" id="password" name="password" placeholder="Entrer votre mot de passe" value="">
					</div>
					<button type="submit" class="btn btn-primary mt-2">modifier</button>
				</form>

			</div>
		</div>
	</main>
{% endblock %}
